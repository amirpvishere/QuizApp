<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="results-container">
        <h1>Results for <%= name %></h1>
        <h2>Score: <%= score %>/<%= totalQuestion %></h2>
        <table>
            <tr>
                <th>Question</th>
                <th>Your Answers</th>
                <th>Correct Answer</th>
                <th>Result</th>
            </tr>
            <% userAnswers.forEach(item => { %>
                <tr>
                    <td><%= item.question %></td>
                    <td class="<%= item.userAnswer === item.correctAnswer ? 'correct' : 'incorrect' %>">
                        <%= item.userAnswer %>
                    </td>
                    <td><%= item.correctAnswer %></td>
                    <td><% if (item.userAnswer === item.correctAnswer) { %>
                        ✅ Correct
                    <% } else { %>
                        ❌ Incorrect
                    <% } %> 
                    </td>
                </tr>
            <% }) %> 
        </table>
        <form action="/finish" method="POST">
            <button type="submit">Finish</button>
        </form>
    </div>
</body>
</html>